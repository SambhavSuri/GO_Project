# AI VRM Chat Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI API Key (for Whisper speech-to-text)
OPENAI_API_KEY=your_openai_api_key_here

# Deepgram API Key (for real-time speech-to-text)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# AWS Credentials (for Polly text-to-speech)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# RAG Endpoint URL (optional)
RAG_ENDPOINT_URL=your_rag_endpoint_url_here

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
PORT=5000

# Looking Glass Configuration
LOOKING_GLASS_ENABLED=true 